/**start.wxss**/
page{
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 150%;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background: #F8F8F8;
}

.box_item {
  width: 100%;
    /*background: no-repeat 750rpx center;*/
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0;
    border-bottom: 1px solid #eee;
    line-height: 100rpx;
    padding-left: 50rpx;
}

/* user_info */
.user_info{
  height: 120px;
  background: #e85654;
}
.img_border{
  width: 100px;
  height: 100px;
  float: left;
  margin:10px 0 0 10px;
}
.user_img{
  width: 80px;
  height: 80px;
  border-radius: 40px;
  margin-top: 10px;
  margin-left: 10px;
}
.user_name{
  float: left;
  font-size: 20px;
  font-weight: bolder;
  margin-top:45px;
  margin-left: 30px;
}

/* box_team */
.box_team{
  width: 90%;
  height: 120px;
  margin-left:5%;
  margin-top: 20px;
  border-radius: 10px;
  border:1px solid #838383;
}
.team_item{
  height: 100px;
  width:30%;
  float: left;
  margin-top:10px;
  border-radius: 10px;
  background: white;
  color: #666666;
}
.item_first{
  margin-left:2%;
}
.team_line{
  width:0.5%;
  height: 100px;
  background: #DDDDDD;
  float: left;
  margin: 10px 1.25% 0px;
}
.team_name,.team_money{
  margin-top: 5px;
  text-align: center;
}
.team_name_bottom,.team_money_bottom{
  color: red;
}
