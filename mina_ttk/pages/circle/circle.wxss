page {
    background-color: #f6f6f6;
}

.r_top_title {
    position: absolute;
}

.top_title {
    width: 100vw;
    display: flex;
    flex-direction: row;
    background-color: #ffffff;
}

.top_btn {
    width: 50vw;
    height: 100rpx;
    background-color: #fff;
    font-size: 28rpx;
    padding-top: 10rpx;
    border-radius: 0;
}

.top_btn::after {
    border: none;
}

.line {
    background-color: #000;
    width: 140rpx;
    height: 2rpx;
    margin-left: 120rpx;
}