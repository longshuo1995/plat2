page {
    background-color: #f6f6f6;
}

.wxgrid {
    clear: both;
    margin-top: 10rpx;
    margin-left: 8rpx;
    margin-right: 8rpx;
}

.wxgrid .wxrow {
    clear: both;
}

.wxgrid .wxcol {
    float: left;
    text-align: center;
}

.wxclassify {
    margin: 0rpx 7rpx 10rpx 7rpx;
    display: block;
    background-color: #fff;
}

.flag_hot {
    position: absolute;
    width: 84rpx;
    height: 84rpx;
    margin-top: -350rpx;
    display: flex;
    right: -170rpx;
}

.tab_text_title {
    text-align: center;
    font-size: 20rpx;
}

.tab_bk {
    background-color: #f9e276;
    text-align: left;
    width: 160rpx;
    height: 50rpx;
    padding-left: 8rpx;
    padding-right: 15rpx;
    display: flex;
    border-top-right-radius: 200rpx;
}

.tab_bk_long {
    background-color: #f9e276;
    text-align: center;
    width: 50rpx;
    height: 100rpx;
    padding-left: 8rpx;
    padding-right: 15rpx;
    display: flex;
    border-bottom-right-radius: 200rpx;
    border-bottom-left-radius: 200rpx;
    flex-direction: column;
}

.r_tab_wxclassify-img {
    position: absolute;
    margin-left: 20rpx;
    width: 182rpx;
    height: 60rpx;
}

.tab_wxclassify-text {
    position: absolute;
    top: 0;
    left: 20rpx;
    font-size: 36rpx;
    width: 100%;
}

.tab_wxclassify-img {
    width: 182rpx;
    height: 50rpx;
}

.wxclassify-img {
    height: 356rpx;
    width: 356rpx;
}

.goods_text {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 24rpx;
    line-height: 34rpx;
}

.discount {
    position: absolute;
    font-size: 18rpx;
    height: 30rpx;
    line-height: 30rpx;
    width: 60rpx;
    margin-top: 3rpx;
}

.discount_image {
    width: 130rpx;
    height: 30rpx;
}

.discount_text {
    margin-left: 30rpx;
}

.gary_text {
    color: #ccc;
    font-size: 26rpx;
    margin-top: -5rpx;
    margin-right: 14rpx;
}

.final_price {
    font-size: 38rpx;
    text-align: left;
    margin-left: 10rpx;
    margin-top: -5rpx;
    font-weight: bold;
    width: 70%;
}

.voucher_price {
    background-color: #f9e276;
    border-radius: 10rpx;
    font-size: 32rpx;
    width: 80rpx;
    height: 35rpx;
    padding-top: 3rpx;
    padding-bottom: 3rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    margin-top: 10rpx;
    margin-right: 14rpx;
}

.promotion_price {
    background-color: #f9e276;
    border-radius: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    font-size: 24rpx;
    text-align: center;
    margin: 0 auto;
}

.yellow_btn {
    font-size: 26rpx;
    background-color: #fee65d;
    border-radius: 50rpx;
    padding: 0rpx 30rpx;
    display: inline-block;
    line-height: 50rpx;
    color: #4e4e4e;
}

.yellow_btn::after {
    border: none;
}