.top_view {
    flex-direction: row;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-top: 30rpx;
}

.money {
    font-size: 72rpx;
    color: #4e4e4e;
    margin-left: 30rpx;
    margin-right: 30rpx;
    border-bottom: 1px #efefef solid;
}

.tip_text {
    font-size: 24rpx;
    color: #9b9b9b;
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.type_tab {
    background-color: #fff;
    width: 50vw;
    height: 96rpx;
    text-align: center;
    font-size: 24rpx;
    line-height: 96rpx;
    border-bottom: 1px #efefef solid;
}

.input {
    margin-left: 30rpx;
}

.text {
    color: #9b9b9b;
    font-size: 24rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    line-height: 50rpx;
}

.type_bottom_line {
    height: 5rpx;
    background-color: #4e4e4e;
    width: 120rpx;
    transition: all 3s;
    transform: translateX(0);
    margin-left: 120rpx;
}

.type_bottom_line:hover {
    transform: translateX(200px);
}

.btn_botm {
    position: fixed;
    z-index: 5;
    bottom: 0;
    width: 100vw;
    height: 88rpx;
    background-color: #f9e276;
    text-align: center;
    line-height: 88rpx;
    color: #4e4e4e;
    font-size: 36rpx;
}

.bk_dialog {
    position: fixed;
    top: 0;
    background-color: #000;
    opacity: 0.5;
    width: 100vw;
    height: 100vh;
    z-index: 10;
}

.dialog {
    position: fixed;
    top: 20%;
    left: 100rpx;
    width: 560rpx;
    background-color: #fff;
    border-radius: 10rpx;
    z-index: 11;
}

.left_text {
    color: #9b9b9b;
    font-size: 30rpx;
    margin-left: 55rpx;
}

.right_text {
    color: #333333;
    font-size: 30rpx;
}

.btn_botc {
    width: 50%;
    height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    line-height: 100rpx;
}