page {
    min-height: 100%;
    background-color: #EFEFF4;
}

.bindaccount {
    color: #4E4E4E;
}

.bindbanner image {
    width: 100%;
    height: 301rpx;
}

.bindacont_top {
    background-color: #fff;
    margin: 20rpx 0 0 0;
    padding: 34rpx 45rpx 38rpx 35rpx;
    font-size: 30rpx;
    line-height: 56rpx;
    text-align: justify;
}

.bindacont_form {
    margin-top: 20rpx;
    color: #4E4E4E;
}

.formtip {
    font-size: 30rpx;
}

.getcodebtn {
    border-radius: 58rpx;
    background-color: #434C55;
    font-size: 32rpx;
    height: 58rpx;
    line-height: 58rpx;
    padding: 0rpx 32rpx;
    color: #fff;
    box-sizing: initial;
}

button::after {
    border: none;
}

.btn-hover {
    opacity: 0.8;
}

.yellow_btn {
    font-size: 30rpx;
    background-color: #FEE65D;
    border-radius: 50rpx;
    padding: 0rpx 30rpx;
    display: inline-block;
    line-height: 62rpx;
    color: #4E4E4E;
}

.weui-media-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.grayline {
    padding: 0 34rpx;
}

.weui-cells::before {
    display: none;
}

.weui-cells::after {
    background: #E5E5E5;
    height: 0.1px;
}

.weui-cell::before {
    background: #E5E5E5;
    height: 0.1px;
}

.weui-cell::after {
    display: none;
}

.xieyi::after {
    display: none;
}

.xieyi {
    background-color: #fff;
    color: #4E4E4E;
}

.xytxt {
    font-size: 30rpx;
}

.xytxt text {
    color: #18A3E3;
}

.formbtn {
    margin-top: 80rpx;
    width: 100%;
}

.bindbtn {
    margin: 0 30rpx;
    background-color: #434C55;
    border-radius: 44rpx;
    height: 88rpx;
    color: #fff;
    box-sizing: inherit;
    line-height: 88rpx;
    font-size: 36rpx;
}

.weui-icon-checkbox_success::after {
    color: #434C55;
}

.weui-check__hd_in-checkbox {
    display: flex;
}

.disBtnclass {
    opacity: 0.8;
}

.weui-input {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
}

button[disabled]:not([type]) {
    background-color: #434C55;
    color: #b2b4b7;
    opacity: 0.9;
}

.weui-icon-checkbox_circle,.weui-icon-checkbox_success {
    margin-left: 0rpx;
    margin-right: 19rpx;
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.weui-check__hd_in-checkbox {
    padding-right: 0;
}