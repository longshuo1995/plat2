.reviews{
  height: 239rpx;
  width: 100%;
  border-bottom: 1px solid #ddd;
  position: relative;
}
.user-reviews{
  width: 690rpx;
  margin: 0 auto;
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.reviewstitle{
  width: 690rpx;
  margin: 0 auto;
  margin-top: 13rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #787878;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.reviewsspecs{
  position: absolute;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #787878;
  left: 30rpx;
}
.show-reviews{
  width: 690rpx;
  margin: 0 auto;
  margin-top: 10rpx;
	height: 80rpx;
  line-height: 80rpx;
  text-align: center;
	background-color: #f5f5f7;
	border-radius: 10rpx;
  font-size: 30rpx;
  color: #000000;
}
/*上划加载*/
.comment-loadmore{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding:20rpx 0;
  /* border-top: 2rpx solid #eeeeee; */
  background: #fff;
}
.comment-loadmore-tips{
  font-size: 30rpx;
  color: #999999;
}
.comment-loading {
  margin: 0 10rpx;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: Loading 1s steps(12, end) infinite;
          animation: Loading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
@-webkit-keyframes Loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
            transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
            transform: rotate3d(0, 0, 1, 360deg);
  }
}
@keyframes Loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
            transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
            transform: rotate3d(0, 0, 1, 360deg);
  }
}
.no-more{
  text-align: center;
  color: #999;
}